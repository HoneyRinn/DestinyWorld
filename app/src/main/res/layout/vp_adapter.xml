<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/imageguide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/frame1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/titleguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Узнайте лор игры!"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/imageguide"
        android:layout_marginTop="18dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="46dp"
        android:gravity="center"
        android:text="Появившийся в Солнечной системе Странник дал человечеству возможность бороться за право существовать. С силой самого Света на их стороне, люди смогли войти в свой Золотой Век. Последовавший же за ним Коллапс стал началом великих перемен в истории не только человечества, но и всего мира."
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleguide" />

</androidx.constraintlayout.widget.ConstraintLayout>